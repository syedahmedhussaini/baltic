{
  "name": "craft3-heroku-starterkit",
  "version": "0.0.1",
  "description": "This is a starter kit for Craft3 which helps you to install the CMS on Heroku.",
  "author": "ESPI Berlin",
  "private": true,
  "engines": {
    "node": "^9.3.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.scss": [
      "stylelint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.5",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "browser-sync": "^2.24.6",
    "browser-sync-webpack-plugin": "^2.2.2",
    "clean-webpack-plugin": "^0.1.19",
    "css-entry-webpack-plugin": "^1.0.0-beta.4",
    "css-loader": "^1.0.0",
    "cssnano": "^4.0.4",
    "eslint-config-semistandard": "^12.0.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "node-sass": "^4.9.2",
    "postcss-loader": "^2.1.6",
    "resolve-url-loader": "^2.3.0",
    "sass-loader": "^7.0.3",
    "stylelint-webpack-plugin": "^0.10.5",
    "webpack": "^3.10.0"
  },
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.24.1",
    "chalk": "^1.1.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.13.0",
    "lint-staged": "^7.1.0",
    "hoek": ">=4.2.1",
    "stylelint": "^9.2.0",
    "stylelint-config-sass-guidelines": "^5.0.0",
    "webpack-cli": "^3.1.0"
  },
  "scripts": {
    "postinstall": "yarn run build",
    "lint:js": "./node_modules/.bin/eslint src/js/**/*",
    "lint:js:fix": "./node_modules/.bin/eslint src/js/**/* --fix",
    "lint:styles": "./node_modules/.bin/stylelint \"src/scss/**/*\" --syntax=scss --fix",
    "precommit": "lint-staged",
    "watch": "webpack --config webpack.dev.config.js --watch",
    "build": "webpack --colors --display-error-details --config webpack.prod.config.js"
  }
}
